<odoo>
    <data>
        <record id="res_config_settings_view_form_sale_contract" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.sale.contract</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@data-key='sale_management']//h2[1]" position="after">
                    <h2>Contract Management</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="sale_contract_required"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="sale_contract_required"/>
                                <div class="text-muted">
                                    Require a valid contract to confirm any Sale Order.
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>