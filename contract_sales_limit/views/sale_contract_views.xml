<odoo>
    <data>
        <!-- Kanban View (Screenshot 2026-01-31 200213) -->
        <record id="view_sale_contract_kanban" model="ir.ui.view">
            <field name="name">sale.contract.kanban</field>
            <field name="model">sale.contract</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile_view">
                    <field name="title"/>
                    <field name="partner_id"/>
                    <field name="state"/>
                    <field name="currency_id"/>
                    <field name="amount_total"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_card_header">
                                    <div class="o_kanban_record_title"><strong><field name="title"/></strong></div>
                                    <div class="o_kanban_manage_button_position">
                                        <img t-att-src="kanban_image('res.partner', 'image_small', record.partner_id.raw_value)" class="oe_kanban_avatar"/>
                                    </div>
                                </div>
                                <div class="o_kanban_card_content">
                                    <div><field name="partner_id"/></div>
                                    <div class="text-muted"><field name="date_start"/> - <field name="date_end"/></div>
                                    <div class="mt16">
                                        <field name="amount_total" widget="monetary"/>
                                    </div>
                                </div>
                                <div class="oe_kanban_footer">
                                    <span class="pull-left text-muted"><field name="state"/></span>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Tree View -->
        <record id="view_sale_contract_tree" model="ir.ui.view">
            <field name="name">sale.contract.tree</field>
            <field name="model">sale.contract</field>
            <field name="arch" type="xml">
                <tree string="Contracts">
                    <field name="name"/>
                    <field name="title"/>
                    <field name="partner_id"/>
                    <field name="date_start"/>
                    <field name="state"/>
                    <field name="amount_total" widget="monetary"/>
                </tree>
            </field>
        </record>

        <!-- Form View (Screenshot 2026-01-31 200238) -->
        <record id="view_sale_contract_form" model="ir.ui.view">
            <field name="name">sale.contract.form</field>
            <field name="model">sale.contract</field>
            <field name="arch" type="xml">
                <form string="Contract">
                    <header>
                        <button name="action_submit" string="Submit for Approval" states="draft" type="object" class="btn-primary"/>
                        <button name="action_approve" string="Approve" states="pending" type="object" class="btn-primary" groups="sales_team.group_sale_manager"/>
                        <button name="action_reject" string="Reject" states="pending" type="object"/>
                        <button name="action_start" string="Start Contract" states="approved" type="object" class="btn-primary"/>
                        <button name="action_cancel" string="Reset to Draft" states="rejected" type="object"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,pending,approved,running"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_sales" type="object" class="oe_stat_button" icon="fa-clipboard-list">
                                <field name="order_count" widget="statinfo" string="Orders"/>
                            </button>
                            <button name="action_view_sales" type="object" class="oe_stat_button" icon="fa-money">
                                <field name="amount_used" widget="statinfo" string="Used Amount"/>
                            </button>
                            <button name="action_view_sales" type="object" class="oe_stat_button" icon="fa-balance-scale">
                                <field name="amount_residual" widget="statinfo" string="Remaining Balance"/>
                            </button>
                        </div>
                        
                        <div class="oe_title">
                            <label for="title" class="oe_edit_only"/>
                            <h1><field name="title" placeholder="Contract Title"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="partner_id"/>
                                <field name="approval_team_id"/>
                            </group>
                            <group>
                                <field name="date_start"/>
                                <field name="date_end"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Lines">
                                <field name="line_ids">
                                    <tree editable="bottom">
                                        <field name="product_id"/>
                                        <field name="name"/>
                                        <field name="product_uom_qty"/>
                                        <field name="uom_id" groups="uom.group_uom"/>
                                        <field name="price_unit"/>
                                        <field name="price_subtotal" widget="monetary"/>
                                    </tree>
                                </field>
                                <group class="oe_subtotal_footer oe_right">
                                    <field name="amount_total" widget="monetary" nolabel="1"/>
                                </group>
                            </page>
                            <page string="Terms and Conditions">
                                <field name="terms_condition"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="action_sale_contract" model="ir.actions.act_window">
            <field name="name">Contracts</field>
            <field name="res_model">sale.contract</field>
            <field name="view_mode">kanban,tree,form</field>
        </record>

        <menuitem id="menu_sale_contract" action="action_sale_contract" parent="sale.sale_order_menu" sequence="1" name="Contracts"/>
    </data>
</odoo>