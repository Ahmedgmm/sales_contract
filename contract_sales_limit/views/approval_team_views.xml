<odoo>
    <data>
        <!-- Team Tree View -->
        <record id="view_contract_approval_team_tree" model="ir.ui.view">
            <field name="name">contract.approval.team.tree</field>
            <field name="model">contract.approval.team</field>
            <field name="arch" type="xml">
                <tree string="Approval Teams">
                    <field name="name"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>

        <!-- Team Form View -->
        <record id="view_contract_approval_team_form" model="ir.ui.view">
            <field name="name">contract.approval.team.form</field>
            <field name="model">contract.approval.team</field>
            <field name="arch" type="xml">
                <form string="Approval Team">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <notebook>
                            <page string="Approvers">
                                <field name="member_ids">
                                    <tree editable="bottom">
                                        <field name="user_id"/>
                                        <field name="role"/>
                                        <field name="min_amount"/>
                                        <field name="max_amount"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="action_contract_approval_team" model="ir.actions.act_window">
            <field name="name">Approval Teams</field>
            <field name="res_model">contract.approval.team</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_contract_approval_team" action="action_contract_approval_team" 
                  parent="sale.menu_sale_config" name="Approval Teams"/>
    </data>
</odoo>