<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Contract Approval Team Form View -->
    <record id="view_contract_approval_team_form" model="ir.ui.view">
        <field name="name">contract.approval.team.form</field>
        <field name="model">contract.approval.team</field>
        <field name="arch" type="xml">
            <form string="Contract Approval Team">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name" placeholder="e.g., Management Team"/>
                            <field name="team_leader_id" options="{'no_create': True}"/>
                        </group>
                        <group>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Approvers" name="approvers">
                            <field name="approver_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="user_id" options="{'no_create': True}"/>
                                    <field name="role_position"/>
                                    <field name="can_edit" widget="boolean_toggle"/>
                                    <field name="minimum_amount" widget="monetary"/>
                                    <field name="maximum_amount" widget="monetary"/>
                                    <field name="currency_id" column_invisible="1"/>
                                    <field name="custom_condition_code"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page string="Help" name="help">
                            <group>
                                <div class="alert alert-info" role="alert">
                                    <h4>Approval Team Configuration</h4>
                                    <ul>
                                        <li><strong>Team Leader:</strong> The person responsible for the approval team</li>
                                        <li><strong>Approvers:</strong> Users who can approve contracts</li>
                                        <li><strong>Minimum/Maximum Amount:</strong> Define approval limits for each approver</li>
                                        <li><strong>Can Edit:</strong> Allow approver to edit contract before approval</li>
                                        <li><strong>Custom Condition Code:</strong> Python code for advanced approval rules</li>
                                    </ul>
                                </div>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Contract Approval Team Tree View -->
    <record id="view_contract_approval_team_tree" model="ir.ui.view">
        <field name="name">contract.approval.team.tree</field>
        <field name="model">contract.approval.team</field>
        <field name="arch" type="xml">
            <tree string="Contract Approval Teams">
                <field name="name"/>
                <field name="team_leader_id"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <!-- Contract Approval Team Action -->
    <record id="action_contract_approval_team" model="ir.actions.act_window">
        <field name="name">Contract Approval Teams</field>
        <field name="res_model">contract.approval.team</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first approval team
            </p>
            <p>
                Approval teams define who can approve contracts and set approval limits.
            </p>
        </field>
    </record>

</odoo>
